<body>
<div class="siteWrapper">
    <div class="contentWrapper">
        <!-- 헤더 -->
        <header class="header py-2 border-bottom">
            <div class="container mb-1">
                <a href="/" class="logo d-block mb-3 pt-1">
                    <img src="/img/logo1.png" class="img-fluid">
                </a>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-4">
                        <a href="/personal/jobposting/list" class="headerItem text-decoration-none text-dark small"
                           id="Recruit">채용공고</a>
                        {{#sessionUser}}
                            <a href="/s/personal/resume" class="headerItem text-decoration-none text-dark small"
                               id="Resume">이력서</a>
                        {{/sessionUser}}
                        {{^sessionUser}}
                            <a href="/login-form" class="headerItem text-decoration-none text-dark small" id="Resume">이력서</a>
                        {{/sessionUser}}
                        <a href="/community/list" class="headerItem text-decoration-none text-dark small"
                           id="Community">커뮤니티</a>
                        {{#sessionUser}}
                            <a href="/s/personal/mypage/application"
                               class="headerItem text-decoration-none text-dark small"
                               id="MyPage">마이페이지</a>
                        {{/sessionUser}}
                        {{^sessionUser}}
                            <a href="/login-form" class="headerItem text-decoration-none text-dark small"
                               id="MyPage">마이페이지</a>
                        {{/sessionUser}}
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        {{#sessionUser}}
                            <a href="/logout" class="headerItem text-decoration-none text-dark small"
                               id="MyPage">로그아웃</a>
                        {{/sessionUser}}
                        {{^sessionUser}}
                            <a href="/login-form" class="headerItem text-decoration-none text-dark small"
                               id="joinLogin">회원가입/로그인</a>
                        {{/sessionUser}}
                        {{^sessionUser}}
                            <a href="/login-form?redirect=/s/company/main"
                               class="headerItem text-decoration-none text-dark small"
                               id="business">기업 서비스</a>
                        {{/sessionUser}}
                    </div>
                </div>
            </div>
        </header>
        <!-- header 끝 -->
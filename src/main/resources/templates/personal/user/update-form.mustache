{{> layout/personal-header}}
<!-- 헤더 끝 -->

<!-- 본문 -->
<div class="main container mt-5">
    <div class="editContainer">
        <div class="leftImageBox">
            <img src="/img/logo2.png" alt="회원정보 수정 이미지">
        </div>

        <div class="editForm">
            <form action="/s/personal/user/update" method="post" enctype="application/x-www-form-urlencoded">
                <h3 class="mb-4 fw-bold fs-3 text-dark">회원 정보 수정</h3>

                <div class="mb-3">
                    <label for="name" class="form-label">이름</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="이름을 입력해주세요." value="{{sessionUser.name}}">
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">아이디</label>
                    <input type="text" class="form-control" id="username" value="{{sessionUser.username}}" readonly>
                </div>

                <div class="mb-3">
                    <label for="newPassword" class="form-label">새 비밀번호</label>
                    <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="새 비밀번호 입력">
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">새 비밀번호 확인</label>
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="새 비밀번호 입력">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">이메일</label>
                    <input type="email" class="form-control" name="email" id="email" value="{{sessionUser.email}}">
                </div>

                <div class="mb-3">
                    <label for="birthdate" class="form-label">생년월일</label>
                    <input type="date" class="form-control" id="birthdate" readonly value="{{sessionUser.birthDate}}">
                </div>

                <div class="mb-3">
                    <label for="contactNumber" class="form-label">전화번호</label>
                    <input type="tel" class="form-control" name="contactNumber" id="contactNumber" placeholder="010-1234-5678" value="{{sessionUser.contactNumber}}">
                </div>

                <button type="submit" class="btn btn-primary btnEdit">회원정보 수정</button>
            </form>

        </div>
    </div>
</div>
<!-- 본문 끝 -->

{{> layout/footer}}
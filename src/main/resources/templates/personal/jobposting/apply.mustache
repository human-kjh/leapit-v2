{{> layout/personal-header}}

<!-- 입사지원 폼 시작 -->
<section class="bg-light py-5">
    <div class="container">
        <div class="application-form mx-auto p-4 bg-white shadow rounded" style="max-width: 800px;">

            <h1 class="mb-3 text-center">{{applyForm.jobPostingName}}</h1>
            <h2 class="mb-4 text-center text-muted">{{applyForm.companyName}}</h2>

            <form action="/s/personal/jobposting/{{applyForm.jobPostingId}}/apply" method="POST">
                <input type="hidden" name="jobPostingId" value="{{applyForm.jobPostingId}}">

                <!-- 개인 정보 -->
                <div class="mb-4">
                    <h3 class="mb-3">개인 정보</h3>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">이름</label>
                            <div class="form-control bg-light">{{applyForm.userName}}</div>
                            <input type="hidden" name="userName" value="{{applyForm.userName}}">
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">이메일</label>
                            <div class="form-control bg-light">{{applyForm.userEmail}}</div>
                            <input type="hidden" name="userEmail" value="{{applyForm.userEmail}}">
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">연락처</label>
                            <div class="form-control bg-light">{{applyForm.phoneNumber}}</div>
                            <input type="hidden" name="phoneNumber" value="{{applyForm.phoneNumber}}">
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">출생년도</label>
                            <div class="form-control bg-light">{{applyForm.birthDate}}</div>
                            <input type="hidden" name="birthDate" value="{{applyForm.birthDate}}">
                        </div>
                    </div>
                </div>

                <!-- 이력서 선택 -->
                <div class="mb-4">
                    <h3 class="mb-3">이력서 선택</h3>

                    {{#applyForm.availableResumes}}
                        <div class="form-check resume-option p-3 border rounded mb-3">
                            <input class="form-check-input" type="radio" name="resumeId" id="{{resumeId}}"
                                   value="{{resumeId}}" required>
                            <label class="form-check-label w-100" for="{{resumeId}}">
                                <strong>{{resumeTitle}}</strong>
                                <div class="small text-muted">기술스택: {{skills}}</div>
                                <div class="small text-muted">학력: {{education}}</div>
                                <div class="small text-muted">경력: {{experience}}</div>
                                <div class="small text-muted">등록일: {{registeredDate}}</div>
                            </label>
                        </div>
                    {{/applyForm.availableResumes}}
                </div>

                <!-- 제출 버튼 -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">지원하기</button>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- 입사지원 폼 끝 -->

{{> layout/footer}}

            <div class="flex-grow-1">
                <input type="text" class="form-control form-control-sm mb-2 projectTitle" placeholder="* 프로젝트명" value="테스트 프로젝트" />
                <input type="text" class="form-control form-control-sm mb-2 projectSummary" placeholder="프로젝트 요약" value="웹서비스 구축" />
                <div class="bg-light px-2 py-1 rounded mb-2">
                    <div class="dropdown">
                        <button class="form-select text-start border-0 bg-light" type="button" data-bs-toggle="dropdown">
                            * 기술스택을 선택해주세요
                        </button>
                        <ul class="dropdown-menu p-3" style="min-width: 250px;">
                            {{#model.techStackList}}
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input projectTechCheckbox" type="checkbox" value="{{code}}" id="project-tech-{{code}}">
                                        <label class="form-check-label" for="project-tech-{{code}}">{{code}}</label>
                                    </div>
                                </li>
                            {{/model.techStackList}}
                        </ul>
                    </div>
                </div>
                <textarea class="form-control form-control-sm projectDescription" rows="2" placeholder="* 상세 설명">Node.js 백엔드 서버 개발</textarea>
                <input type="text" class="form-control form-control-sm mt-2 projectRepoUrl" placeholder="저장소 URL" value="https://github.com/test/project" />
            </div>
        </div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>


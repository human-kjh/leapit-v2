<!-- 기타사항 추가용 template -->
<template id="etcTemplate">
    <div class="etcItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <input type="hidden" class="etcId" value="" />
        <div class="d-flex flex-wrap gap-3">
            <div style="min-width: 200px">
                <label class="form-label fw-bold"><span class="text-danger">*</span> 활동 기간</label>
                <div class="d-flex align-items-center gap-2 mb-2">
                    <input type="date" class="form-control form-control-sm w-auto etcStartDate" value="2020-01-01" />
                    ~
                    <input type="date" class="form-control form-control-sm w-auto etcEndDate" value="2020-06-01" />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input etcHasEndDate" /> 종료일 없음
                </div>
            </div>
            <div class="flex-grow-1">
                <input type="text" class="form-control form-control-sm mb-2 etcTitle" placeholder="* 활동명/제목" value="정보처리기사 취득" />
                <select class="form-select form-select-sm mb-2 etcType">
                    <option selected>* 자격증</option>
                    <option>어학</option>
                    <option>수상</option>
                    <option>기타</option>
                </select>
                <input type="text" class="form-control form-control-sm mb-2 etcInstitutionName" placeholder="* 기관명" value="한국산업인력공단" />
                <textarea class="form-control form-control-sm etcDescription" rows="2" placeholder="* 상세 내용/점수">필기+실기 합격</textarea>
            </div>
        </div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 링크 추가용 template -->
<template id="linkTemplate">
    <div class="linkItem d-flex align-items-center gap-2 mb-2">
        <i class="bi bi-link-45deg fs-5"></i>
        <input type="text" class="form-control form-control-sm" placeholder="* 링크 제목" value="GitHub" />
        <input type="text" class="form-control form-control-sm" placeholder="* http://, https://를 포함해 작성해주세요" value="https://github.com/example" />
        <button type="button" class="btn btn-outline-danger btn-sm d-flex align-items-center justify-content-center removeItemBtn" style="white-space: nowrap;">
            삭제
        </button>
    </div>
</template>


<!-- 학력 추가용 template -->
<template id="educationTemplate">
    <div class="educationItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <div class="d-flex flex-wrap gap-3">
            <div style="min-width: 180px">
                <label class="form-label fw-bold"><span class="text-danger">*</span> 졸업(예정)</label>
                <input type="month" class="form-control form-control-sm mb-2" value="2025-02" />
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" /> 중퇴
                </div>
            </div>
            <div class="flex-grow-1">
                <div class="row gx-2 mb-2">
                    <div class="col-4">
                        <select class="form-select form-select-sm">
                            <option selected disabled>* 학력 구분</option>
                            <option>고등학교</option>
                            <option>전문학사</option>
                            <option>학사</option>
                            <option>석사</option>
                            <option>박사</option>
                        </select>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control form-control-sm" placeholder="* 학교명" value="더미대학교" />
                    </div>
                </div>
                <div class="mb-2">
                    <input type="text" class="form-control form-control-sm" placeholder="학과명" value="컴퓨터공학과" />
                </div>
                <div class="d-flex align-items-center gap-2">
                    <input type="number" class="form-control form-control-sm w-25" placeholder="GPA" step="0.01" value="4.3" />
                    /
                    <select class="form-select form-select-sm w-auto" name="gpaScale">
                        <option value="" selected disabled>GPA 기준</option>
                        <option value="4.3">4.3</option>
                        <option value="4.5">4.5</option>
                    </select>

                </div>
            </div>
        </div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 경력 추가용 template -->
<template id="experienceTemplate">
    <div class="experienceItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <div class="d-flex flex-wrap gap-3">
            <div style="min-width: 200px">
                <label class="form-label fw-bold"><span class="text-danger">*</span> 근무기간</label>
                <div class="d-flex align-items-center gap-2 mb-2">
                    <input type="date" class="form-control form-control-sm w-auto" value="2022-01-01" />
                    ~
                    <input type="date" class="form-control form-control-sm w-auto" value="2024-01-01" />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" /> 재직중
                </div>
            </div>
            <div class="flex-grow-1">
                <input type="text" class="form-control form-control-sm mb-2" placeholder="* 회사명" value="더미컴퍼니" />
                <input type="text" class="form-control form-control-sm mb-2" placeholder="회사 요약" value="IT 스타트업" />
                <input type="text" class="form-control form-control-sm mb-2" placeholder="포지션/부서" value="백엔드팀" />
                <div class="bg-light px-2 py-1 rounded mb-2">
                    <div class="dropdown">
                        <button class="form-select text-start border-0 bg-light" type="button" data-bs-toggle="dropdown">
                            * 기술스택을 선택해주세요
                        </button>
                        <ul class="dropdown-menu p-3" style="min-width: 250px;">
                            {{#model.techStackList}}
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input experience-tech-checkbox" type="checkbox" value="{{code}}" id="experience-tech-{{code}}">
                                        <label class="form-check-label" for="experience-tech-{{code}}">{{code}}</label>
                                    </div>
                                </li>
                            {{/model.techStackList}}
                        </ul>
                    </div>
                </div>

                <textarea class="form-control form-control-sm" rows="2" placeholder="* 주요 업무">API 서버 개발</textarea>
            </div>
        </div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 프로젝트 추가용 template -->
